<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SaveTheBunnyJava" parent="Theme.Material3.DayNight">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
        <!-- Disable tinting -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="materialThemeOverlay">@null</item>
        <!-- Explicitly override M3 app bar colors -->
        <item name="colorSurface">@color/menubar</item>               <!-- App bar background -->
        <item name="colorOnSurface">@color/menubar</item>               <!-- Title text/icons -->

    </style>

    <style name="Theme.SaveTheBunnyJava" parent="Base.Theme.SaveTheBunnyJava" />
